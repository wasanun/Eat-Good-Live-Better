<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Set"
    android:background="#C1FFF7F7"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/nt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="TextView"
                android:textColor="#FFC107"
                android:textSize="25dp" />
        </RelativeLayout>
        <GridLayout
            android:columnCount="2"
            android:rowCount="2"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <Button
                        android:id="@+id/h1"
                        android:layout_width="177dp"
                        android:layout_height="173dp"
                        android:layout_marginTop="12dp"
                        android:textColor="#630707"
                        android:text="call center"
                        android:drawableTop="@drawable/lk"
                        android:textSize="18sp" />


                </LinearLayout>

</GridLayout>






    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f7c77e"
        android:drawableTop="@drawable/ho"
        android:text="HOME"
        android:textColor="#D0000000" />

        <Button
            android:id="@+id/cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7c77e"
            android:drawableTop="@drawable/cal"
            android:text="Calories" />

        <Button
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7c77e"
            android:drawableTop="@drawable/food"
            android:text="Food" />


        <Button
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7c77e"
            android:drawableTop="@drawable/tt"
            android:text="Setting" />
    </LinearLayout>

</RelativeLayout>
